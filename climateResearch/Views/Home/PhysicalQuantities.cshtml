@model IEnumerable<climateResearch.Models.Entities.PhysicalQuantity>

@{
    ViewBag.Title = "PhysicalQuantities";
}
    <div class="container">
        <h2>Физические величины</h2>

        <p>
            @Html.ActionLink("Create New", "Create", "PhysicalQuantities")
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr onclick="window.location='/PhysicalQuantities/Details/@item.Id'">
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "PhysicalQuantities", new { id = item.Id }, null) |
                        @Html.ActionLink("Delete", "Delete", "PhysicalQuantities", new { id = item.Id }, null)
                    </td>
                </tr>
            }

        </table>
    </div>
